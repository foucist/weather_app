
<div class="flex items-center justify-center h-screen">
  <div class="border border-indigo-600 rounded max-w-2xl">

    <div class="flex flex-col justify-between">

      <div class="flex justify-between p-2">
        <div>
          <div class="text-2xl">Partly cloudy</div>
          <div class="">Chicago, IL</div>
        </div>
        <div>
          Â°C
        </div>
      </div>

      <div class="flex justify-between p-2">
        <% @hourly.each do |time, hour|%>
          <div class="m-2">
            <div><%=  Time.parse(time).strftime("%l %p") %></div>
            <img src="/icons/<%= hour["icon"] %>.svg">
            <div class="text-2xl"><%= hour["temperature"]["celsius"].to_i %></div>
          </div>
        <% end %>
      </div>

      <div class="flex p-2">
        <div class="">Humidity: <span class="font-semibold">65%</span></div>
        <div class="">Wind: <span class="font-semibold">7 MPH NE</span></div>
      </div>

      <div class="flex justify-between bg-slate-300 w-full">
        <% @daily.each do |date, day|%>
          <div class="m-2">
            <div><%= day["weekday"] %></div>
            <img src="/icons/<%= day["icon"] %>.svg">
            <div class="text-2xl"><%= day["max_temperature"]["celsius"].to_i %></div>
            <div class="text-2xl"><%= day["min_temperature"]["celsius"].to_i %></div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
